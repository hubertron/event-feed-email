                                      valign="middle"><a href="https://www.winterparkresort.com<%=  event['EventLink'] %>" name="hyperlink16" style="text-decoration:none;display:block;line-height:35px;color:#9c2f31;"
                                        target="_blank" xt="SPCLICK">Learn More ></a></td>
                                  </tr>
                                </tbody>
                              </table>
                            </td>
                          </tr>
                        </tbody>
                      </table></table>
                    <% end %>
