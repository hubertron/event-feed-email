                            <td align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:14px;line-height:20px; color:#9c2f31;" valign="top"
                              bgcolor="#ffffff"><%= DateTime.parse(event['StartDate']).strftime('%A %b %e %I:%M:%S %p')  %></td>
