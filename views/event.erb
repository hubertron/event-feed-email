        <tbody>
        
          <tr>
            <td class="w10" width="25">&nbsp;</td>
            <td align="center" valign="top">
            <% 4.times do |index|  %>
                <% event = @events[index] %>
              <table align="left" border="0" cellpadding="0" cellspacing="0" width="">
