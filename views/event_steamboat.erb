<html>

<head>
  <title>
    <%= @resortTitle %> Events Feed
  </title>
</head>

<body>

<% 4.times do |index|  %><% event = @events['Events'][index] %>
<table align="left" border="0" cellpadding="0" cellspacing="0" class="w100pc" style="width:295px;height:295px;margin-right:5px;margin-bottom:5px;padding-right:5px;padding-bottom:5px;" width="285">
                       <tbody>
                            <tr>
                              <td align="center" valign="top" bgcolor="#2d3e4e"><a href="#" name="hyperlink15" target="_blank" xt="SPCLICK"><a href="#" name="hyperlink15" target="_blank" xt="SPCLICK"><img alt="" border="0"   src="https://www.winterparkresort.com<%=  event['ImageLink'] %>" style="display:block;" width="295" height="130" xt="SPIMAGE" /></a></td>
                            </tr>
                            <tr>
                              <td height="15" style="line-height:15px; font-size:15px;" bgcolor="#2d3e4e">&nbsp;</td>
                            </tr>
                            <tr>
                              <td align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:16px;line-height:22px;color:#c9c9c9;font-weight:bold;" valign="top" bgcolor="#2d3e4e"><%= event['Title'] %></td>
                            </tr>
                            <tr>
                              <td align="center" style="font-family:Arial, Helvetica, sans-serif; font-size:14px;line-height:20px; color:#c9c9c9;" valign="top" bgcolor="#2d3e4e">
                                <!-- The following functions looks and compares to see if event is today, if it is, then it shows a callout otherwise it shows the date -->
                                <% if Date.today.strftime('%Y-%m-%e') == DateTime.parse(event['StartDate']).strftime('%Y-%m-%e') %>
                                  <span style='font-weight:bold;color:#98002e;'>  
                                    <%= "Today, starting at #{DateTime.parse(event['StartDate']).strftime('%I:%M %p')}"  %>
                                  </span>
                                <% else %>
                                  <%= DateTime.parse(event['StartDate']).strftime('%A %b %e %I:%M %p')  %>
                                <% end %></td>
                            </tr>
                            <tr>
                              <td align="center" valign="top" bgcolor="#2d3e4e"><table align="center" border="0" cellpadding="0" cellspacing="0" width="125" >
                                  <tbody>
                                    <tr>
                                      <td align="center" height="35" style="font-family:Arial, Helvetica, sans-serif; font-size:14px;color:#c9c9c9;font-weight:bold; border:2px solid #e54d42; " valign="middle"><a href="https://<%= @events['Site'] %><%=  event['EventLink'] %>" name="fullreport" style="text-decoration:none;display:block;line-height:35px;color:#c9c9c9;" target="_blank" xt="SPCLICK">Learn More</a></td>
                                      <td align="center" height="35" style="font-family:Arial, Helvetica, sans-serif; font-size:16px;color:#e54d42;font-weight:bold; border:2px solid #e54d42; background-color:#e54d42;" valign="middle" width="30"><a href="https://www.winterparkresort.com<%=  event['EventLink'] %>" name="fullreport2" style="text-decoration:none;display:block;line-height:35px;color:#c9c9c9" target="_blank" xt="SPCLICK">&gt;</a></td>
                                    </tr>
                                  </tbody>
                                </table></td>
                            </tr>
                          </tbody>
                        </table>
                        

<% end %>

